generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum ProductState {
  active
  inactive
  draft
  out_stock
  deleted
}

enum CategoryStatus {
  deleted
  active
  inactive
}

enum SaleSource {
  WEB
  CAJA
}

enum PaymentMethod {
  TARJETA
  EFECTIVO
  TRANSFERENCIA
  QR
  NINGUNO
}

enum tenantPlan {
  FREE
  PREMIUM
}

model Tenant {
  id          String   @id @default(cuid())
  slug        String   @unique 
  name        String
  plan        tenantPlan   @default(FREE)
  is_active   Boolean  @default(true)

  primary_domain String? 
  custom_domains Json?   @default("[]") 

  created_at DateTime @default(now()) @db.Timestamptz(3)
  updated_at DateTime @updatedAt @db.Timestamptz(3)

  // relaciones
  users       User[]
  admins      Admin[]
  products    Products[]
  categories  Categories[]
  sales       Sales[]
  orders      Orders[]
  cart        Cart[]
  orderItems  OrderItems[]
  faq         FAQ[]
  business    BusinessData?
  businessBankData BusinessBankData[]
  colors      ColorPalette[]

  @@index([is_active])
  @@index([slug])
}


model User {
  id             Int      @id @default(autoincrement())
  email          String
  password       String
  name           String
  is_active      Boolean  @default(true)
  profile_image  String?
  created_at     DateTime @default(now()) @db.Timestamptz(3)
  updated_at     DateTime @updatedAt @db.Timestamptz(3)
  role           Int      @default(2)

  sales Sales[]
  orders Orders[]
  tenantId String
  tenant Tenant @relation(fields: [tenantId], references: [id])
  phone String?
  shipping_street String?
  shipping_postal_code String?
  shipping_city String?
  shipping_province String?
  cart Cart?

  @@unique([email, tenantId])
  @@index([is_active])
  @@index([role])
  @@index([tenantId])
  @@index([created_at])
}

model Admin {
  id            Int      @id @default(autoincrement())
  email         String
  password      String
  name          String
  is_active     Boolean  @default(true)
  profile_image String?
  role          Int      @default(1)
  phone         String?  
  tenantId String
  tenant Tenant @relation(fields: [tenantId], references: [id])
  created_at    DateTime @default(now()) @db.Timestamptz(3)
  updated_at    DateTime @updatedAt @db.Timestamptz(3)

  @@unique([email, tenantId])
  @@index([is_active])
  @@index([created_at])
  @@index([phone])
  @@index([tenantId])
}

model Categories {
  id         String         @id @default(cuid())
  title      String
  image      String?
  is_active  Boolean        @default(true)
  created_at DateTime       @default(now()) @db.Timestamptz(3)
  status     CategoryStatus @default(active)
  products   Products[]
  tenantId String
  tenant Tenant @relation(fields: [tenantId], references: [id])

  @@index([status, is_active])
  @@index([created_at])
  @@index([title])
  @@index([tenantId])
}

model Products {
  id          String       @id @default(cuid())
  title       String
  price       Float        @default(0.00)
  description String
  is_active   Boolean      @default(true)
  state       ProductState @default(active)
  created_at  DateTime     @default(now()) @db.Timestamptz(3)
  images      Json         @default("[]")
  categoryId  String?
  tags        Json?        @default("[]")
  stock       Int          @default(1)
  options     Json         @default("[]")
  category    Categories?  @relation(fields: [categoryId], references: [id], onDelete: SetNull)
  sales       Sales[]
  orderItems  OrderItems[]
  tenantId String
  tenant Tenant @relation(fields: [tenantId], references: [id])

  @@index([categoryId])
  @@index([categoryId, is_active])
  @@index([is_active, state])
  @@index([created_at])
  @@index([price])
  @@index([tenantId])
}

model Sales {
  id             String        @id @default(cuid())
  payment_method PaymentMethod
  source         SaleSource
  total          Float         @default(0.00)
  created_at     DateTime      @default(now()) @db.Timestamptz(3)
  userId         Int?
  tax            Float         @default(0.00)
  user           User?         @relation(fields: [userId], references: [id], onDelete: SetNull)
  products       Products[]
  items          Json          @default("[]")
  manualProducts Json?         @default("[]")
  loadedManually Boolean       @default(false)
  paymentMethods Json?         @default("[]")
  processed      Boolean       @default(false)
  declined       Boolean       @default(false)
  tenantId String
  tenant Tenant @relation(fields: [tenantId], references: [id])
  decline_reason String?

  orders         Orders[]

  @@index([created_at])
  @@index([userId])
  @@index([source, created_at])
  @@index([payment_method, created_at])
  @@index([tenantId])
}

model Cart {
  id        Int      @id @default(autoincrement())
  total     Float    @default(0.00)
  userId    Int      @unique
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  items     OrderItems[]
  tenantId String
  tenant Tenant @relation(fields: [tenantId], references: [id])

  @@index([userId])
  @@index([tenantId])
}

model OrderItems {
  id               String   @id @default(cuid())
  productId        String
  quantity         Int      @default(1)
  selected_options Json     @default("[]")
  price_has_changed Boolean  @default(false)
  cartId           Int
  cart             Cart     @relation(fields: [cartId], references: [id], onDelete: Cascade)
  product          Products @relation(fields: [productId], references: [id], onDelete: Cascade)
  tenantId String
  tenant Tenant @relation(fields: [tenantId], references: [id])

  @@index([cartId])
  @@index([productId])
  @@index([tenantId])
}

model Orders {
  id             String   @id @default(cuid())
  userId         Int?
  user           User?    @relation(fields: [userId], references: [id], onDelete: SetNull)
  items          Json     @default("[]")
  total          Float    @default(0.00)
  subtotal       Float?   @default(0.00)
  discount       Float?   @default(0.00)
  promo_code     String?
  payment_method String
  created_at     DateTime @default(now()) @db.Timestamptz(3)
  buyer_email    String?
  buyer_name     String?
  buyer_phone    String?
  saleId         String?
  sale           Sales?   @relation(fields: [saleId], references: [id], onDelete: SetNull)
  transfer_receipt_path String?
  tenantId String
  tenant Tenant @relation(fields: [tenantId], references: [id])

  @@index([userId])
  @@index([created_at])
  @@index([saleId])
  @@index([promo_code])
  @@index([tenantId])
}

model FAQ {
  id           String   @id @default(cuid())
  question     String
  answer       String
  position     Int      @default(0)
  is_active    Boolean  @default(true)
  deleted_at   DateTime?
  created_at   DateTime @default(now()) @db.Timestamptz(3)
  updated_at   DateTime @updatedAt @db.Timestamptz(3)
  tenantId String
  tenant Tenant @relation(fields: [tenantId], references: [id])

  @@index([is_active, position])
  @@index([deleted_at])
  @@index([created_at])
  @@index([tenantId])
}

model BusinessData {
  id        String   @id @default(cuid())
  name      String
  email     String
  phone     String
  address   String
  city      String
  state     String
  type      String?
  description String?
  business_image String?
  favicon        String?
  bankData  BusinessBankData[]
  tenantId String  @unique
  tenant Tenant @relation(fields: [tenantId], references: [id])
  // WhatsApp Integration
  whatsapp_enabled        Boolean  @default(false)
  whatsapp_access_token   String?  // Personal Access Token de WasenderAPI
  whatsapp_session_id     Int?     // ID de sesión (número según API)
  whatsapp_api_key        String?  // API Key de la sesión (para enviar mensajes)
  whatsapp_webhook_secret String?  // Secret para validar webhooks entrantes
  whatsapp_phone_number   String?  // Número conectado
  whatsapp_connected      Boolean  @default(false)
  whatsapp_allowed_remitents String? // Lista de números permitidos separados por coma
  
  @@index([tenantId])
}
model BusinessBankData{
  id        String   @id @default(cuid())
  bank_name String
  account_number String
  account_holder String
  businessId      String
  business       BusinessData @relation(fields: [businessId], references: [id])
  tenantId String
  tenant Tenant @relation(fields: [tenantId], references: [id])
  @@index([tenantId])
  @@index([businessId])
}

model ColorPalette {
  id              String   @id @default(cuid())
  name            String   @unique
  colors          String[]
  is_active       Boolean  @default(true)
  use_for_admin   Boolean  @default(false)
  use_for_shop    Boolean  @default(false)
  created_at      DateTime @default(now()) @db.Timestamptz(3)
  updated_at      DateTime @updatedAt @db.Timestamptz(3)
  tenantId String
  tenant Tenant @relation(fields: [tenantId], references: [id])

  @@index([is_active])
  @@index([use_for_admin])
  @@index([use_for_shop])
  @@index([tenantId])
}


